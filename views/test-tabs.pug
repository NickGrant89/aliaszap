html
  head
    title Test Tabs
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', rel='stylesheet')
    style.
      .tab-pane { display: none; }
      .tab-pane.active { display: block; }
  body
    .container.mt-5
      h2 Test Tabs
      ul.nav.nav-tabs#testTabs
        li.nav-item
          a.nav-link.active(data-bs-toggle='tab', href='#tab1') Tab 1
        li.nav-item
          a.nav-link(data-bs-toggle='tab', href='#tab2') Tab 2
      .tab-content.mt-3
        #tab1.tab-pane.active
          p This is Tab 1 content.
        #tab2.tab-pane
          p This is Tab 2 content.
    script(src='/js/bootstrap.bundle.min.js')
    script.
      document.addEventListener('DOMContentLoaded', () => {
        const tabLinks = document.querySelectorAll('#testTabs a');
        const tabPanes = document.querySelectorAll('.tab-pane');
        tabLinks.forEach(link => {
          link.addEventListener('click', (event) => {
            event.preventDefault();
            const targetId = link.getAttribute('href').substring(1);
            tabLinks.forEach(l => l.classList.remove('active'));
            tabPanes.forEach(p => p.classList.remove('active'));
            link.classList.add('active');
            document.getElementById(targetId).classList.add('active');
          });
        });
      });