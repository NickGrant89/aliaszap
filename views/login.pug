html
  head
    title Login - AliasZap
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', rel='stylesheet')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        a.navbar-brand(href='/') AliasZap
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/signup') Signup
    .container.mt-5
      .row
        .col-md-6.offset-md-3
          h2.mb-4 Login
          if error
            .alert.alert-danger= error
          form(method='POST', action='/login')
            input(type='hidden', name='_csrf', value=csrfToken)
            .mb-3
              label.form-label(for='email') Email
              input#email.form-control(type='email', name='email', required, placeholder='you@example.com')
            .mb-3
              label.form-label(for='password') Password
              input#password.form-control(type='password', name='password', required)
            button.btn.btn-primary.w-100(type='submit') Login
          p.mt-3.text-center Don't have an account? #[a(href='/signup') Sign up]
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')