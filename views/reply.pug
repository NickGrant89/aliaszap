html
  head
    title Reply - AliasZap
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/styles.css', rel='stylesheet')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        a.navbar-brand(href='/') AliasZap
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/dashboard') Dashboard
            li.nav-item
              a.nav-link(href='/subscribe') Upgrade
            li.nav-item
              a.nav-link(href='/logout') Logout
            li.nav-item
              button#darkModeToggle.btn.btn-link.nav-link Dark Mode
    .container.mt-5
      .row
        .col-md-6.offset-md-3
          h2.mb-4 Reply from Alias
          if error
            .alert.alert-danger= error
          form(method='POST', action=`/reply/${alias._id}`)
            input(type='hidden', name='_csrf', value=csrfToken)
            .mb-3
              label.form-label(for='to') To
              input#to.form-control(type='email', name='to', required, placeholder='recipient@example.com')
            .mb-3
              label.form-label(for='subject') Subject
              input#subject.form-control(type='text', name='subject', required, placeholder='Subject')
            .mb-3
              label.form-label(for='body') Body
              textarea#body.form-control(name='body', rows='5', required, placeholder='Your message')
            button.btn.btn-primary(type='submit') Send Reply
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    script(src='/js/dashboard.js')